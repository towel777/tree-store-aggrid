{
  "extends": "@tsconfig/node24/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2015", "DOM"],
    "types": ["jest", "node"],
    "strict": true
  }
}
